<?xml version="1.0" encoding="ISO-8859-1" ?>
<config>
    <port>7894</port>

    <support-tools-dir>/disk4/translation-server/web/bin</support-tools-dir>
    <model-dir>/disk4/webtrans-models</model-dir>
    <moses-dir>/disk3/bhaddow/moses</moses-dir>
    <recase-model-dir>/disk4/translation-server/models/recasing</recase-model-dir>
    <moses>${moses-dir}/moses-cmd/src/moses.2560</moses>
    <splitter>${support-tools-dir}/split-sentences.perl</splitter>

    <!-- Translation tools -->
    <moses-servers>
        <moses-server>
            <name>de-en-moses</name>
            <host>localhost</host>
            <port>8080</port>
        </moses-server>
        <moses-server>
            <name>en-de-moses</name>
            <host>localhost</host>
            <port>8081</port>
        </moses-server>
        <moses-server>
            <name>es-en-moses</name>
            <host>localhost</host>
            <port>8082</port>
        </moses-server>
        <moses-server>
            <name>fr-en-moses</name>
            <host>localhost</host>
            <port>8083</port>
        </moses-server>
    </moses-servers>

    <tokenisers>
        <command>${support-tools-dir}/tokenizer.perl</command>
        <tokeniser>
            <name>fr-tok</name>
            <language>fr</language>
        </tokeniser>
        <tokeniser>
            <name>en-tok</name>
            <language>en</language>
        </tokeniser>
        <tokeniser>
            <name>de-tok</name>
            <language>de</language>
        </tokeniser>
        <tokeniser>
            <name>es-tok</name>
            <language>es</language>
        </tokeniser>
    </tokenisers>

    <lowercasers>
        <command>${support-tools-dir}/lowercase.perl</command>
        <lowercaser>
            <name>lower</name>
        </lowercaser>
    </lowercasers>
        

    <recasers>
        <command>${support-tools-dir}/recase.perl</command>
        <moses>${moses}</moses>
        <recaser>
            <name>de-recaser</name>
            <model>${recase-model-dir}/matrix07b/model.4/moses.ini.4</model>
        </recaser>
        <recaser>
            <name>en-recaser</name>
            <model>${recase-model-dir}/matrix07b/model.1/moses.ini.1</model>
        </recaser>
    </recasers>

    <detokenisers>
        <command>${support-tools-dir}/detokenizer.perl</command>
        <detokeniser>
            <name>de-detok</name>
            <language>de</language>
        </detokeniser>
        <detokeniser>
            <name>en-detok</name>
            <language>en</language>
        </detokeniser>
    </detokenisers>


    <!-- Translation tool chains -->
    <toolchain>
        <name>fr-en</name>
        <description>French->English (Europarl)</description>
        <source>fr</source>
        <target>en</target>
        <split>true</split>
        <parallel>true</parallel>
        <tool>fr-tok</tool>
        <tool>lower</tool>
        <tool>fr-en-moses</tool>
        <tool>en-recaser</tool>
        <tool>en-detok</tool>
    </toolchain>
    <toolchain>
        <name>de-en</name>
        <description>German->English (Europarl)</description>
        <source>de</source>
        <target>en</target>
        <split>true</split>
        <parallel>true</parallel>
        <tool>de-tok</tool>
        <tool>lower</tool>
        <tool>de-en-moses</tool>
        <tool>en-recaser</tool>
        <tool>en-detok</tool>
    </toolchain>
    <toolchain>
        <name>es-en</name>
        <description>Spanish->English (Europarl)</description>
        <source>es</source>
        <target>en</target>
        <split>true</split>
        <parallel>true</parallel>
        <tool>es-tok</tool>
        <tool>lower</tool>
        <tool>es-en-moses</tool>
        <tool>en-recaser</tool>
        <tool>en-detok</tool>
    </toolchain>
    <toolchain>
        <name>en-de</name>
        <description>English->German (Europarl)</description>
        <source>en</source>
        <target>de</target>
        <parallel>true</parallel>
        <split>true</split>
        <tool>en-tok</tool>
        <tool>lower</tool>
        <tool>en-de-moses</tool>
        <tool>de-recaser</tool>
        <tool>de-detok</tool>
    </toolchain>
    <toolchain>
        <name>fr-en-bare</name>
        <description>French->English (Europarl)</description>
        <split>true</split>
        <parallel>true</parallel>
        <source>fr</source>
        <target>en</target>
        <tokinput>true</tokinput>
        <tool>lower</tool>
        <tool>fr-en-moses</tool>
        <tool>en-recaser</tool>
    </toolchain>
    <toolchain>
        <name>de-en-bare</name>
        <description>German->English (Europarl)</description>
        <split>true</split>
        <parallel>true</parallel>
        <source>de</source>
        <target>en</target>
        <tokinput>true</tokinput>
        <tool>lower</tool>
        <tool>de-en-moses</tool>
        <tool>en-recaser</tool>
    </toolchain>
    <toolchain>
        <name>es-en-bare</name>
        <description>Spanish->English (Europarl)</description>
        <split>true</split>
        <parallel>true</parallel>
        <source>es</source>
        <target>en</target>
        <tokinput>true</tokinput>
        <tool>lower</tool>
        <tool>es-en-moses</tool>
        <tool>en-recaser</tool>
    </toolchain>
    <toolchain>
        <name>en-de-bare</name>
        <description>English->German (Europarl)</description>
        <split>true</split>
        <parallel>true</parallel>
        <source>en</source>
        <target>de</target>
        <tokinput>true</tokinput>
        <tool>lower</tool>
        <tool>en-de-moses</tool>
        <tool>de-recaser</tool>
    </toolchain>
</config>
