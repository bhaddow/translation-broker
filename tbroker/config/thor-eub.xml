<?xml version="1.0" encoding="ISO-8859-1" ?>
<config>
    <port>7897</port>

    <support-tools-dir>/disk4/translation-server/web/bin</support-tools-dir>
    <true-model-dir>/disk3/bhaddow/experiments/demo/true</true-model-dir>
    <splitter>ctm</splitter>
    <ctmtotxt>${support-tools-dir}/split-sentences.perl</ctmtotxt>
    <txttoctm>${support-tools-dir}/split-sentences.perl</txttoctm>

    <!-- Translation tools -->
    <moses-servers>
        <moses-server>
            <name>eub-fr-en</name>
            <host>localhost</host>
            <port>8280</port>
            <system>default</system>
        </moses-server>
<!--
        <moses-server>
          <name>sb-fr-en-1009-13</name>
          <host>localhost</host>
          <port>8190</port>
          <system>default</system>
        </moses-server>
        -->
    </moses-servers>

    <tokenisers>
        <command>${support-tools-dir}/tokenizer.perl</command>
        <tokeniser>
            <name>en-tok</name>
            <language>en</language>
        </tokeniser>
        <tokeniser>
            <name>fr-tok</name>
            <language>fr</language>
        </tokeniser>
    </tokenisers>

    <detokenisers>
        <command>${support-tools-dir}/detokenizer.perl</command>
        <detokeniser>
            <name>de-detok</name>
            <language>de</language>
        </detokeniser>
        <detokeniser>
            <name>fr-detok</name>
            <language>fr</language>
        </detokeniser>
        <detokeniser>
            <name>en-detok</name>
            <language>en</language>
        </detokeniser>
    </detokenisers>


    <truecasers>
        <command>${support-tools-dir}/truecase.perl</command>
        <truecaser>
            <name>en-true</name>
            <model>${true-model-dir}/truecase-model.en</model>
        </truecaser>
        <truecaser>
            <name>fr-true</name>
            <model>${true-model-dir}/truecase-model.fr</model>
        </truecaser>
    </truecasers>

    <detruecasers>
        <command>${support-tools-dir}/detruecase.perl</command>
        <detruecaser>
            <name>fr-detrue</name>
        </detruecaser>
        <detruecaser>
            <name>de-detrue</name>
        </detruecaser>
        <detruecaser>
            <name>en-detrue</name>
        </detruecaser>
    </detruecasers>

    <desegmenters>
        <command>${support-tools-dir}/desegmenter.perl</command>
        <desegmenter>
            <name>ja-deseg</name>
        </desegmenter>
    </desegmenters>


    <!-- Translation tool chains -->
