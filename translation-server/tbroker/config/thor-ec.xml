<?xml version="1.0" encoding="ISO-8859-1" ?>
<config>
    <port>7895</port>

    <support-tools-dir>/disk4/translation-server/web/bin</support-tools-dir>
    <model-dir>/disk4/webtrans-models/acquis-truecased</model-dir>
    <splitter>${support-tools-dir}/split-sentences.perl</splitter>

    <moses-servers>
        <moses-server>
            <name>fr-en-acquis-server</name>
            <host>localhost</host>
            <port>9080</port>
        </moses-server>
        <moses-server>
            <name>it-en-acquis-server</name>
            <host>localhost</host>
            <port>9081</port>
        </moses-server>
        <moses-server>
            <name>nl-el-acquis-server</name>
            <host>localhost</host>
            <port>9082</port>
        </moses-server>
        <moses-server>
            <name>de-fr-acquis-server</name>
            <host>localhost</host>
            <port>9083</port>
        </moses-server>
        <moses-server>
            <name>en-lt-acquis-server</name>
            <host>localhost</host>
            <port>9084</port>
        </moses-server>
        <moses-server>
            <name>hu-ro-acquis-server</name>
            <host>localhost</host>
            <port>9085</port>
        </moses-server>
    </moses-servers> 


    <tokenisers>
        <command>${support-tools-dir}/tokenizer.perl</command>
        <tokeniser>
            <name>fr-tok</name>
            <language>fr</language>
        </tokeniser>
        <tokeniser>
            <name>it-tok</name>
            <language>it</language>
        </tokeniser>
        <tokeniser>
            <name>nl-tok</name>
            <language>nl</language>
        </tokeniser>
        <tokeniser>
            <name>de-tok</name>
            <language>de</language>
        </tokeniser>
        <tokeniser>
            <name>en-tok</name>
            <language>en</language>
        </tokeniser>
        <tokeniser>
            <name>hu-tok</name>
            <language>hu</language>
        </tokeniser>
    </tokenisers>

    <detokenisers>
        <command>${support-tools-dir}/detokenizer.perl</command>
        <detokeniser>
            <name>en-detok</name>
            <language>en</language>
        </detokeniser>
        <detokeniser>
            <name>el-detok</name>
            <language>el</language>
        </detokeniser>
        <detokeniser>
            <name>fr-detok</name>
            <language>fr</language>
        </detokeniser>
        <detokeniser>
            <name>lt-detok</name>
            <language>lt</language>
        </detokeniser>
        <detokeniser>
            <name>ro-detok</name>
            <language>ro</language>
        </detokeniser>
    </detokenisers>

    <truecasers>
        <command>${support-tools-dir}/truecase.perl</command>
        <truecaser>
            <name>fr-true</name>
            <model>${model-dir}/truecaser/truecase-model.9.fr</model>
        </truecaser>
        <truecaser>
            <name>it-true</name>
            <model>${model-dir}/truecaser/truecase-model.11.it</model>
        </truecaser>
        <truecaser>
            <name>nl-true</name>
            <model>${model-dir}/truecaser/truecase-model.120.nl</model>
        </truecaser>
        <truecaser>
            <name>de-true</name>
            <model>${model-dir}/truecaser/truecase-model.192.de</model>
        </truecaser>
        <truecaser>
            <name>en-true</name>
            <model>${model-dir}/truecaser/truecase-model.253.en</model>
        </truecaser>
        <truecaser>
            <name>hu-true</name>
            <model>${model-dir}/truecaser/truecase-model.389.hu</model>
        </truecaser>
    </truecasers>

    <detruecasers>
        <command>${support-tools-dir}/detruecase.perl</command>
        <detruecaser>
            <name>detrue</name>
            <model></model>
        </detruecaser>
    </detruecasers>


<!-- demo translation tool chains -->
    <toolchain>
        <name>fr-en</name>
        <description>French->English (Acquis)</description>
        <source>fr</source>
        <target>en</target>
        <split>true</split>
        <tool>fr-tok</tool>
        <tool>fr-true</tool>
        <tool>fr-en-acquis-server</tool>
       <tool>detrue</tool>
