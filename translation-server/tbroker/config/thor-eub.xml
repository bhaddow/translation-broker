    <toolchain>
        <name>eub-sr-en</name>
        <description>EnglishASRCTM->EnglishCTM Punct Truecase (EU-Bridge)</description>
        <source>sr</source>
        <target>en</target>
        <split>true</split>
        <parallel>true</parallel>
        <tool>sr-dectm</tool>
        <tool>eub-sr-en</tool>
        <tool>en-detrue</tool>
        <tool>en-detok</tool>
    </toolchain>
    <toolchain>
        <name>eub-en-fr</name>
	<description>EnglishASRCTM->FrenchCTM (EU-Bridge)</description>
        <source>en</source>
        <target>fr</target>
        <split>true</split>
        <parallel>true</parallel>
        <tool>en-dectm</tool>
        <tool>eub-en-fr</tool>
        <tool>fr-detrue</tool>
	<tool>fr-ctm</tool>
        <tool>fr-detok</tool>
    </toolchain>
    <toolchain>
        <name>eub-en-de</name>
	<description>EnglishASRCTM->GermanCTM (EU-Bridge)</description>
        <source>en</source>
        <target>de</target>
        <split>true</split>
        <parallel>true</parallel>
        <tool>en-dectm</tool>
        <tool>eub-en-de</tool>
        <tool>de-detrue</tool>
	<tool>de-ctm</tool>
        <tool>de-detok</tool>
    </toolchain>
    <toolchain>
        <name>eub-en-es</name>
	<description>EnglishASRCTM->SpanishCTM (EU-Bridge)</description>
        <source>en</source>
        <target>es</target>
        <split>true</split>
        <parallel>true</parallel>
        <tool>en-dectm</tool>
        <tool>eub-en-es</tool>
        <tool>es-detrue</tool>
	<tool>es-ctm</tool>
        <tool>es-detok</tool>
    </toolchain>
</config>
