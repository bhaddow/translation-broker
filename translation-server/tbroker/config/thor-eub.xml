<?xml version="1.0" encoding="ISO-8859-1" ?>
<config>
    <port>7897</port>

    <support-tools-dir>/disk4/translation-server/web/bin</support-tools-dir>
    <splitter>${support-tools-dir}/split-sentences-ctm.perl</splitter>

    <!-- Translation tools -->
    <moses-servers>
        <moses-server>
            <name>eub-en-fr</name>
            <host>localhost</host>
            <port>8281</port>
            <system>default</system>
        </moses-server>
        <moses-server>
            <name>eub-en-es</name>
            <host>localhost</host>
            <port>8282</port>
            <system>default</system>
        </moses-server>
        <moses-server>
            <name>eub-en-de</name>
            <host>localhost</host>
            <port>8283</port>
            <system>default</system>
        </moses-server>
        <moses-server>
            <name>eub-sr-en</name>
            <host>localhost</host>
            <port>8284</port>
            <system>default</system>
        </moses-server>
<!--
        <moses-server>
          <name>sb-fr-en-1009-13</name>
          <host>localhost</host>
          <port>8190</port>
          <system>default</system>
        </moses-server>
        -->
    </moses-servers>



    <stripctms>
        <command>${support-tools-dir}/ctm-to-txt.perl</command>
        <stripctm>
            <name>en-dectm</name>
        </stripctm>
        <stripctm>
            <name>sr-dectm</name>
        </stripctm>
    </stripctms>
    <restorectms>
        <command>${support-tools-dir}/mtoutput-to-ctm.perl</command>
        <restorectm>
            <name>en-ctm</name>
        </restorectm>
        <restorectm>
            <name>fr-ctm</name>
        </restorectm>
        <restorectm>
            <name>de-ctm</name>
        </restorectm>
        <restorectm>
            <name>es-ctm</name>
        </restorectm>
    </restorectms>

    <detruecasers>
        <command>${support-tools-dir}/detruecase.perl</command>
        <detruecaser>
            <name>en-detrue</name>
        </detruecaser>
        <detruecaser>
            <name>fr-detrue</name>
        </detruecaser>
        <detruecaser>
            <name>de-detrue</name>
        </detruecaser>
        <detruecaser>
            <name>es-detrue</name>
        </detruecaser>
    </detruecasers>
    <detokenisers>
        <command>${support-tools-dir}/detokenizer.perl</command>
        <detokeniser>
            <name>en-detok</name>
            <language>en</language>
        </detokeniser>
        <detokeniser>
            <name>fr-detok</name>
            <language>fr</language>
        </detokeniser>
        <detokeniser>
            <name>de-detok</name>
            <language>de</language>
        </detokeniser>
        <detokeniser>
            <name>es-detok</name>
            <language>es</language>
        </detokeniser>
    </detokenisers>



    <!-- Translation tool chains -->
